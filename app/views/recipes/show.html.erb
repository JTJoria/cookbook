<h1><%= @recipe.title %></h1>
<h2>By: <%= @recipe.chef %></h2>
<h4>Updated on: <%= @recipe.friendly_updated_at %></h4>

<h3>Prep Time: <%= @recipe.friendly_prep_time %></h3>

<h3>Ingredients</h3>
<ul>
<%u @ingredient_list.each do |ingredient|%>
  <li><%= ingredient %></li>
<% end %>
</ul>
<h3>Directions</h3>
<ol>
<%= @direction_list.each do |step|%>
  <li><%= step %></li>
  <% end %>
</ol>
<h3><%= @recipe.directions %></h3>
<%= image_tag @recipe.image %>

  <%= link_to "Home", "/" %>
  <%= link_to "Edit", "/recipe/#{@recipe.id}/edit" %>
  <%= link_to "Delete", "/recipes/#{@recipe.id}", method: :delete, data:{confirm: "Are You Sure?"} %>
